extends ../layouts/base/layout

block content
  section.login
    if errors
        .login__error 
          b #{errors}
    form.login__form.form(action=``, method=`post`)
      .login__title
        a.login__link(href=`/register`) Регистрация
        h2 Вход
      
      .form__field.login__field
        input#user-email.js-field(type=`email`, name=`email`)
        label(for=`email`) Эл. почта
        span Обязательное поле
      .form__field.login__field
        input#user-password.js-field(type=`password`, name=`password`)
        label(for=`password`) Пароль
        span Обязательное поле
      button.login__button.btn.btn--medium.js-button(type=`submit`) Войти
